<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<Pane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="graphics_view.graphical_controller.LobbyController"
      prefHeight="400.0" prefWidth="600.0">
    <Button text="createServer" fx:id="createServer" onMouseClicked="#createServer"/>
    <HBox spacing="50">
        <TextField fx:id="searchTextField" promptText="searchServer"/>
        <Button text="search" onMouseClicked="#search"/>
        <ScrollPane fx:id="serversToJoin"/>
        <Button text="refresh" onMouseClicked="#refresh"/>
    </HBox>
</Pane>
