<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="graphics_view.graphical_controller.TradeController"
            stylesheets="@../css/tradeMenu.css"
            styleClass="TradeMenuPane"
            prefHeight="700.0" prefWidth="1200.0">
    <top>
        <Label text="Trade" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Button text="Create new trade request" prefHeight="100" prefWidth="300" onMouseClicked="#create"/>
            <Button text="View trade requests" prefHeight="100" prefWidth="300" onMouseClicked="#manage"/>
        </VBox>
    </center>
</BorderPane>
