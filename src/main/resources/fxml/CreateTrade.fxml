<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="graphics_view.graphical_controller.CreateTradeController"
            stylesheets="@../css/tradeMenu.css"
            styleClass="CreateTrade"
            prefHeight="700.0" prefWidth="1200.0">
    <top>
        <Label text="Choose whom you wanna trade with" BorderPane.alignment="CENTER">
            <font>
                <Font name="System Bold" size="18.0"/>
            </font>
        </Label>
    </top>
    <center>
        <ListView fx:id="userList" prefHeight="200.0" prefWidth="200.0" />
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="20">
            <Button text="Back" prefHeight="100" prefWidth="300" onMouseClicked="#back"/>
            <Button text="Next" prefHeight="100" prefWidth="300" onMouseClicked="#next"/>
        </HBox>
    </bottom>
</BorderPane>
